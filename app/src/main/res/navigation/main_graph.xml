<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="kr.ac.konkuk.wastezero.ui.main.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_mainFragment_to_alarmFragment"
            app:destination="@id/alarmFragment" />
        <action
            android:id="@+id/action_mainFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
        <action
            android:id="@+id/action_mainFragment_to_ingredientListFragment"
            app:destination="@id/ingredientListFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="kr.ac.konkuk.wastezero.ui.search.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/alarmFragment"
        android:name="kr.ac.konkuk.wastezero.ui.alarm.AlarmFragment"
        android:label="AlarmFragment" />
    <fragment
        android:id="@+id/cameraFragment"
        android:name="kr.ac.konkuk.wastezero.ui.camera.CameraFragment"
        android:label="CameraFragment" />
    <fragment
        android:id="@+id/ingredientListFragment"
        android:name="kr.ac.konkuk.wastezero.ui.ingredient.IngredientListFragment"
        android:label="IngredientListFragment" />
    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="kr.ac.konkuk.wastezero.ui.recipe.RecipeDetailFragment"
        android:label="RecipeDetailFragment" />
    <include app:graph="@navigation/bottom_navigation_graph" />
    <include app:graph="@navigation/login_graph" />
</navigation>