<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/recipe_item_image_cv"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/recipe_item_image_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/recipe_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="레시피 이름"
        android:textAppearance="@style/TextAppearance.WASTEZERO.Headline_sb_16"
        app:layout_constraintStart_toEndOf="@id/recipe_item_image_cv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recipe_item_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="자세한 내용"
        android:textAppearance="@style/TextAppearance.WASTEZERO.Headline_sb_16"
        android:textColor="@color/primary_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/recipe_item_image_cv"
        app:layout_constraintTop_toBottomOf="@id/recipe_item_title_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>