<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_ingredient_cl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/gray_white"
    android:paddingHorizontal="4dp"
    android:paddingVertical="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/ingredient_item_image_cv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ingredient_item_image_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/ingredient_item_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="8dp"
        android:elevation="1dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="재료명재료명재료명재료명재료명재료명재료명"
        android:textAppearance="@style/TextAppearance.WASTEZERO.Headline_b_14"
        android:textColor="@color/gray_white"
        android:translationZ="1dp"
        app:layout_constraintBottom_toBottomOf="@id/ingredient_item_image_cv"
        app:layout_constraintEnd_toEndOf="@id/ingredient_item_image_cv"
        app:layout_constraintStart_toStartOf="@id/ingredient_item_image_cv" />

</androidx.constraintlayout.widget.ConstraintLayout>